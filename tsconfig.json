{
  "compilerOptions": {
    "module": "ES6",
    "esModuleInterop": true,
    "target": "es2021",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {"@/*": ["./src/*"]}
  },
  "lib": ["es2021"],

  "include": ["src/*.ts", "src/*.d.ts"],
  "exclude": ["node_modules", "dist", "webpack.config.js"]    
}
